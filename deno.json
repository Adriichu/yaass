{
	"name": "@tycrek/yaass",
	"license": "ISC",
	"version": "0.0.0",
	"exports": "./src/yaass.ts",
	"tasks": {
		"start": "deno run -A ./src/yaass.ts"
	},
	"imports": {
		"@db/sqlite": "jsr:@db/sqlite@^0.12.0",
		"@hono/hono": "jsr:@hono/hono@^4.6.19",
		"@std/crypto": "jsr:@std/crypto@^1.0.4",
		"@std/encoding": "jsr:@std/encoding@^1.0.7",
		"@std/fs": "jsr:@std/fs@^1.0.11",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@std/ulid": "jsr:@std/ulid@^1.0.0",
		"@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.0.6",
		"postcss": "npm:postcss@^8.5.2"
	},
	"fmt": {
		"useTabs": true,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"lineWidth": 120,
		"exclude": [
			"README.md"
		]
	},
	"exclude": [
		".gitignore",
		".vscode/",
		"compose.yml"
	],
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "@hono/hono/jsx"
	},
	"nodeModulesDir": "auto",
	"lock": false
}
